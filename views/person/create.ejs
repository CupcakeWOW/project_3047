<!--create.ejs-->
<form action="/person/create" method="POST">
    <div class="form-group">
        <label>Event Name</label>
        <input type="text" class="form-control" name="Person[name]" required>
    </div>

    <div class="form-group">
        <label>Short Description</label>
        <textarea class="form-control" name="Person[short_des]" required>
            </textarea>
    </div>

    <div class="form-group">
        <label>Full Description</label>
        <textarea class="form-control" name="Person[full_des]" required>
                </textarea>
    </div>

    <div class="form-group">
        <label>Image URL</label>
        <input type="text" class="form-control" name="Person[img]" required>
    </div>

    <div class="form-group">
        <label>Organizer</label>
        <select class="form-control" name="Person[org]" required>
            <option value="nan">Please select the Department</option>
            <option value="Music">Department of Music</option>
            <option value="computer">Department of computer Science</option>
            <option value="history">Department of history</option>
            <option value="biology">Department of biology</option>
        </select>
    </div>

    <div class="form-group">
        <label>Date</label>
        <input type="date" class="form-control" name="Person[date]" required>
    </div>

    <div class="form-group">
        <label>Time</label>
        <input type="time" class="form-control" name="Person[time]" required>
    </div>

    <div class="form-group">
            <label>Venue</label>
            <select class="form-control" name="Person[venue]" required>
                <option value="nan">Please select the venue</option>
                <option value="AC_hall">AC Hall</option>
                <option value="AAB">AAB</option>
            </select>
        </div>
 
    <div class="form-group">
            <label>Quota</label>
            <input type="number" class="form-control" name="Person[quota]" required>
        </div>

    <div class="form-group">
        <input type="checkbox" value="true" name="Person[highlight]" >
        <label>Highlight Event</label>
    </div>



    <button type="submit" class="btn btn-primary">Submit</button>
</form>