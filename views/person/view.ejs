<div class="row">
    <div class="card col-md-12">
        <div class="row">

            <div class="col-md-12">
                <h4>
                    <%= person.name %>
                </h4>
            </div>
        </div>

        <div class="row">
            <div class="col-md-5">
                <img height="500" width="400" src="<%= person.url %>">
            </div>
            <div class="col-md-7">
                <table class="table">
                    <tr>
                        <td>
                            <%= person.full_des%>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <span style="font-weight:bold">Organizer: </span>
                            <%= person.org%>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <span style="font-weight:bold">Date: </span>
                            <%=person.date%>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <span style="font-weight:bold">Time: </span>
                            <%=person.time%>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <span style="font-weight:bold">Venue: </span>
                            <%= person.venue%>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <span style="font-weight:bold">Quota: </span>
                            <%= person.quota%>
                        </td>
                    </tr>
                    <tr>
                        <td>
                           <% if ( person.quota != 0) { %>

                            <% if (req.session.usertype == "student") { %>
                            <% if (assco.supervises.length > 0) { %>
                            
                            <a href="/user/<%= req.session.uid %>/supervises/remove/<%= person.id %>" class="btn btn-danger">Cancel</a>
                            <% } else { %>
                            
                            <a href="/user/<%= req.session.uid %>/supervises/add/<%= person.id %>" class="btn btn-info">Register</a>
                            <% } %>
                            <% } %>
                            <% } %>
                        </td>
                    </tr>
                </table>

            </div>
        </div>
    </div>
</div>